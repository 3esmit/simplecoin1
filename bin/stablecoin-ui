#!/usr/bin/env node
var express = require("express")

var PORT = process.env.PORT || 3000
var URL = `http://localhost:${PORT}`

express().use(express.static(".")).listen(PORT, () => console.log(`
  >>>>> Serving UI at <${URL}>...

  Unless you're using MetaMask (<https://metamask.io>) or some other
  similar Web3 provider, you'll want to start your node like this:
  
     geth --rpc --rpcport=8545 --rpccorsdomain=${URL}

  Report bugs to <https://github.com/makerdao/simple-stablecoin>.
`))
